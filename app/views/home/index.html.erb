<h1>我的看板</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <a href="<%= new_project_path %>" class="btn btn-secondary btn-lg d-flex justify-content-center align-items-center board-card">
                <span>新增看板</span>
            </a>
        </div>
        <% @projects.each do |project| %>
            <div class="col-md-4">
                <a href="<%= project_path(project) %>" class="btn btn-primary btn-lg d-flex justify-content-center align-items-center board-card">
                    <span><%= project.name %></span>
                </a>
            </div>
        <% end %>
    </div>
</div>