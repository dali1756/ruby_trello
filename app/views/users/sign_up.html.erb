<h1 class="text-center my-4">註冊頁面</h1>
<%if @user.errors.any? %>
    <div class="alert alert-danger">
        <h4>註冊失敗</h4>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<%= form_with(model: @user, class: "needs-validation") do |form| %>
    <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "請輸入您的姓名" %>
    </div>
    <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control", placeholder: "請輸入您的信箱" %>
    </div>
    <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.text_field :password, class: "form-control", placeholder: "設定密碼(至少 6 字元)" %>
    </div>
    <div class="d-grid gap-2">
        <%= form.submit "註冊", class: "btn btn-primary" %>
    </div>
<% end %>
