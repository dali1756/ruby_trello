<h1 class="text-center my-4">編輯使用者</h1>

<%= form_with(model: @user, class: "needs-validation", method: :patch) do |form| %>
<div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "請輸入姓名" %>
</div>
<div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control", placeholder: "請輸入信箱" %>
</div>
<div class="d-grid gap-2">
    <%= form.submit "更新", class: "btn btn-primary" %>
</div>
<% end %>
